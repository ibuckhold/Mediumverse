extends layout.pug

include utils.pug

block head
    title() Mediumverse
    link(rel='stylesheet' href='/stylesheets/create-story.css')
    link(rel='stylesheet' href='/stylesheets/index.css')
    script(src="https://kit.fontawesome.com/a229c5b13d.js" crossorigin="anonymous")
    script(src="/javascripts/create-story.js" type="module")

block content
    +validationErrorSummary(errors)
    form(action='/stories/create' method='post' class='create-story-form')
        input(type='hidden', name='_csrf', value=csrfToken)
        div(class='createStory-button' id='one')
            button(type='submit' class="navButton") Publish
        div(class="categoryDiv")
            input(type="hidden" value=null class="categoryInput" name="categoryId")
            each category in categories
                div(data-category-id=category.id)
                    span(class="categoryOption") #{category.name}
                        img(src="")
            //- select(name='categoryId' class="dropdown")
            //-     option(class="categoryOption") Choose a category
            //-     each category in categories
            //-         option(value=category.id class="categoryOption") #{category.name}
        div(class="titleDiv")
            +field('', 'title', story.title, "", "Title...", "textPlaceholder titleText")
        div(class="textDiv")
            +field('', 'text', story.text, 'textarea', "Tell your story here...", "textPlaceholder contentText")
        div(class="imageUpload")
            img(class="far fa-images")
            input(type="file" id="actual-btn")
        div(class='createStory-button' id='two')
            button(type='submit' class="navButton") Publish
