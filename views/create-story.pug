extends layout.pug

include utils.pug

block head
    title() Mediumverse
    link(rel='stylesheet' href='/stylesheets/create-story.css')
    link(rel='stylesheet' href='/stylesheets/index.css')
    script(src="https://kit.fontawesome.com/a229c5b13d.js" crossorigin="anonymous")

block content
    +validationErrorSummary(errors)
    form(action='/stories/create' method='post' class='create-story-form' enctype='multipart/form-data')
        input(type='hidden', name='_csrf', value=csrfToken)
        div(class='createStory-button' id='one')
            button(type='submit' class="navButton") Publish
        div(class="categoryDiv")
            select(name='categoryId')
                each category in categories
                    option(value=category.id) #{category.name}
        div(class="titleDiv")
            +field('', 'title', story.title, "", "Title...", "textPlaceholder titleText")
        div(class="textDiv")
            +field('', 'text', story.text, 'textarea', "Tell your story here...", "textPlaceholder contentText")
            input(type='file', name='imageupload')
        div(class='createStory-button' id='two')
            button(type='submit' class="navButton") Publish
