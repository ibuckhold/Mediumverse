extends layout.pug

include utils.pug

block head
    title() Mediumverse
    link(rel='stylesheet' href='/stylesheets/create-story.css')
    link(rel='stylesheet' href='/stylesheets/index.css')
    script(src="https://kit.fontawesome.com/a229c5b13d.js" crossorigin="anonymous")

block content
    +validationErrorSummary(errors)
    form(action='/stories/create' method='post' class='create-story-form')
        input(type='hidden', name='_csrf', value=csrfToken)
        div(class='createStory-button' id='one')
            button(type='submit' class="navButton") Create Story
        div(class="titleDiv")
            +field('Title', 'title', story.title="Title")
        div(class="categoryDiv")
            label Category
            select(name='categoryId')
                each category in categories
                    option(value=category.id) #{category.name}
        div(class="textDiv")
            +field('Text', 'text', story.text="Tell your story...", 'textarea')
        div(class='createStory-button' id='two')
            button(type='submit' class="navButton") Create Story
