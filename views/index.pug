extends layout.pug

append head
	//- add page specific styles by appending to the head
	//- title Mediumverse
	link(rel="stylesheet" href="/stylesheets/index.css")
	link(rel="stylesheet" href="/stylesheets/homepage.css")
	//- add page specific js
	script(src="/javascripts/index.js" type="module" defer)

block content
	div(class="banner")
		img(src="/images/iron-man-hero.jpeg" class="hero-image")
		div(class="welcome-block")
			div(class="welcome-title") Avengers Assemble!
			div(class="welcome-text") Times have changed, but the stories only get better! Explore unique perspectives from beings all over the multiverse and
					| learn what they have to say about a wide range of topics. Get started today!

	div(class="homepage-body")
		div(class="latest-stories-list")
			div(class="latest-stories-title") Latest Stories
			each story in stories
				div(class="story" href=`/stories/${story.id}`)
					a(href=`/stories/${story.id}`)
						div(class='story-picture')
							img(src=story.imageURL height="100" width="auto" href= `/${story.userId}`)
						div(class="story-title") #{story.title}
		div(class="follows")
				if locals.authenticated
					div(class="follows-title") People You're Following
					div(class="following-container")
						each person in sendPeople
							div(class="user-following" href=`/${person.dataValues.id}`)
								a(href=`/${person.dataValues.id}` class="user-container")
									img(src="/images/avengers logo.png" class="other-user-img")
									div(class="other-user-label") #{person.dataValues.username}

	footer(class="footer-container")
		div(class="person")
			a(class="name" href="https://ibuckhold.github.io" target="_blank" rel="noopener noreferrer") Icarus Buckhold
			a(class="icons fab fa-linkedin" href='https://www.linkedin.com/in/icarus-buckhold/' target="_blank" rel="noopener noreferrer")
			a(class="icons fab fa-github-square" href='https://github.com/ibuckhold' target="_blank" rel="noopener noreferrer")
		div(class="person")
			a(class="name" href="https://junaidmaknojia.github.io/" target="_blank" rel="noopener noreferrer") Junaid Maknojia
			a(class="icons fab fa-linkedin" href='https://www.linkedin.com/in/junaidmaknojia/' target="_blank" rel="noopener noreferrer")
			a(class="icons fab fa-github-square" href='https://github.com/junaidmaknojia' target="_blank" rel="noopener noreferrer")
		div(class="person")
			a(class="name" href="https://mcarlson30.github.io" target="_blank" rel="noopener noreferrer") Marc Carlson
			a(class="icons fab fa-linkedin" href='https://www.linkedin.com/in/marc-carlson/' target="_blank" rel="noopener noreferrer")
			a(class="icons fab fa-github-square" href='https://github.com/Mcarlson30' target="_blank" rel="noopener noreferrer")
		div(class="person")
			a(class="name" href="https://sites.google.com/view/minki-kim/home" target="_blank" rel="noopener noreferrer") Min Ki Kim
			a(class="icons fab fa-linkedin" href='https://www.linkedin.com/in/min-ki-kim-34888a156/' target="_blank" rel="noopener noreferrer")
